<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 앱바 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title=""
        app:contentInsetStartWithNavigation="0dp" />

    <!-- 진행 바 + 남은 문항 텍스트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:trackCornerRadius="8dp"
            app:trackThickness="8dp"
            app:indicatorColor="@color/sage_500"
            app:trackColor="@color/sage_050"
            android:indeterminate="false"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="0 / 20 문항"
            android:textAlignment="center"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 스크롤 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="24dp">


            <!-- Q1. 비싸더라도 내가 좋아하는 브랜드라면 구매한다. -->
             <include layout="@layout/item_mobti_q_common" android:id="@+id/q1" />
            <!-- Q2. 나는 돈을 써서 ~ 잔고 확인 즐거움 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q2" />
            <!-- Q3. 요즘 유행하는 브랜드나 아이템에 관심이 많다. -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q3" />
            <!-- Q4. 큰 소비 전엔 반드시 비교검색 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q4" />
            <!-- Q5. 나를 위한 작은 사치는 꼭 필요 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q5" />
            <!-- Q6. 수익 생기면 저축/이체 습관 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q6" />
            <!-- Q7. 트렌드보다 내 스타일 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q7" />
            <!-- Q8. 소비는 즉흥적으로 결정 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q8" />
            <!-- Q9. 먹고 싶은 건 비싸도 참지 못함 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q9" />
            <!-- Q10. 꼭 필요하지 않으면 사지 않음 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q10" />
            <!-- Q11. 믿고 사는 브랜드가 있다 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q11" />
            <!-- Q12. 이번 달 소비 계획/예산을 미리 세운다 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q12" />
            <!-- Q13. 같은 기능이면 더 저렴한 제품 선택 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q13" />
            <!-- Q14. “돈은 쓰라고 있는 거지” 공감 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q14" />
            <!-- Q15. 유행보다 검증된 제품 선호 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q15" />
            <!-- Q16. 기분/분위기에 따라 소비 패턴 달라짐 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q16" />
            <!-- Q17. 내 기분보다 필요 여부를 먼저 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q17" />
            <!-- Q18. 불편함 감수보다 편리함 위해 돈 더 씀 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q18" />
            <!-- Q19. 친구/인플루언서 추천이 영향 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q19" />
            <!-- Q20. 할인/이벤트 보상에 이끌려 구매 -->
            <include layout="@layout/item_mobti_q_common" android:id="@+id/q20" />

            <!-- 하단 완료 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="검사 완료  >"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                app:cornerRadius="26dp"
                app:backgroundTint="@color/sage_600"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
