<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:paddingVertical="6dp">

    <View
        android:id="@+id/color_swatch"
        android:layout_width="14dp" android:layout_height="14dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_swatch_round"/>

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="식비" android:textSize="14sp" android:textColor="#222222"/>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="180,000 (30.0%)" android:textSize="14sp" android:textColor="#444444"/>
</LinearLayout>
