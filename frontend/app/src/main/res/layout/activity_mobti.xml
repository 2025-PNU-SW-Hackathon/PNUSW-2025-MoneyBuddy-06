<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cream_050">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cream_050"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp">

            <!-- 원형 테두리 + 이모지(TextView) -->
            <FrameLayout
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_outline"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvMascotEmoji"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="🐧"
                    android:textSize="72sp"
                    android:includeFontPadding="false"
                    android:contentDescription="mobti mascot"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <!-- 타입 코드 -->
                <TextView
                    android:id="@+id/tvTypeCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="12dp"
                    android:text="EMCP"
                    android:textColor="@color/sage_600"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTypeCodeKrname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sage_800"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="8dp"
                    android:text="실속꾼 펭귄" />

            </LinearLayout>

            <!-- 카드: 당신은 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/card_bg"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:id="@+id/tvSection1Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:text="" />

                <TextView
                    android:id="@+id/section1Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:text=""
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🍰  나의 소비 성향은?"
                    android:textColor="#222222"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/section2Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:text=""
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="😎  친구와의 관계에서 소비 스타일은?"
                    android:textColor="#222222"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/section3Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:text="" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRetakeMobti"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:text="다시 검사하기"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="#151515"
                app:cornerRadius="14dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/sage_600"
                app:backgroundTint="@color/button_light_green" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
