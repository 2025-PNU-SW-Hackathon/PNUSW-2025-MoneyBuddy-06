<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cream_050">

    <!-- 상단 툴바 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cream_050"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="" />

    <!-- 본문 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MoBTI"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#86935A"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="는"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textColor="#111111"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="소비 및 저축 성향을\n4가지 지표로 분석하여\n16가지 유형으로 알려 주는\n머니로그에서만 만나 볼 수 있는\n성격 유형입니다.\n\n검사해 보러 갈까요?"
                android:textAlignment="center"
                android:textSize="18sp"
                android:lineSpacingExtra="2dp"
                android:textColor="#333333"
                android:layout_marginTop="15dp"/>

            <!-- 시작 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStart"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:text="검사하러 가기"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="#151515"
                app:cornerRadius="14dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/sage_600"
                app:backgroundTint="@color/button_light_green" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
