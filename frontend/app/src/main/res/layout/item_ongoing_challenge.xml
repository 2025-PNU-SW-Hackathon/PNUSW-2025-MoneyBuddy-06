<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/challenge_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="30dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_category"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/category_cafe" />

                <TextView
                    android:id="@+id/tv_challenge_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="챌린지 제목"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_challenge_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="목표 기간: 7일" />

            <TextView
                android:id="@+id/tv_challenge_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="목표 금액: 30000원" />

        </LinearLayout>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:indeterminate="false"
            android:max="100"
            android:progress="30"
            app:indicatorColor="#B5CC68"
            app:trackColor="#C4C7AF"
            app:indicatorSize="80dp"
            app:trackThickness="7dp"
            android:layout_marginStart="80dp"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_rep_challenge"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:foreground="@drawable/challenge_check"
        android:background="@null"
        android:layout_gravity="top|start"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"/>
</androidx.cardview.widget.CardView>